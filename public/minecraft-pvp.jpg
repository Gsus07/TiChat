<svg xmlns="http://www.w3.org/2000/svg" width="400" height="400" viewBox="0 0 400 400">
  <defs>
    <linearGradient id="arenaGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#424242;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#212121;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="fireGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#FF5722;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#FF9800;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFC107;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="explosionGrad" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#FF5722;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#FF5722;stop-opacity:0.1" />
    </radialGradient>
  </defs>
  
  <!-- Dark sky background -->
  <rect width="400" height="400" fill="#1A1A1A"/>
  
  <!-- Arena floor -->
  <rect x="0" y="300" width="400" height="100" fill="url(#arenaGrad)"/>
  
  <!-- Arena walls -->
  <rect x="50" y="200" width="20" height="100" fill="#616161" stroke="#424242" stroke-width="2"/>
  <rect x="330" y="200" width="20" height="100" fill="#616161" stroke="#424242" stroke-width="2"/>
  
  <!-- Swords crossed -->
  <rect x="180" y="120" width="8" height="80" fill="#795548" stroke="#5D4037" stroke-width="1" transform="rotate(45 184 160)"/>
  <rect x="212" y="120" width="8" height="80" fill="#795548" stroke="#5D4037" stroke-width="1" transform="rotate(-45 216 160)"/>
  <rect x="175" y="115" width="18" height="15" fill="#9E9E9E" stroke="#616161" stroke-width="1" transform="rotate(45 184 122)"/>
  <rect x="207" y="115" width="18" height="15" fill="#9E9E9E" stroke="#616161" stroke-width="1" transform="rotate(-45 216 122)"/>
  
  <!-- Shield -->
  <path d="M 200 180 L 180 200 L 200 240 L 220 200 Z" fill="#1976D2" stroke="#0D47A1" stroke-width="2"/>
  <rect x="195" y="190" width="10" height="30" fill="#FFD700" stroke="#FF8F00" stroke-width="1"/>
  
  <!-- Battle effects -->
  <circle cx="120" cy="250" r="25" fill="url(#explosionGrad)">
    <animate attributeName="r" values="15;35;15" dur="1s" repeatCount="indefinite"/>
  </circle>
  <circle cx="280" cy="220" r="20" fill="url(#explosionGrad)">
    <animate attributeName="r" values="10;30;10" dur="1.2s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Fire torches -->
  <rect x="75" y="180" width="8" height="40" fill="#8D6E63"/>
  <ellipse cx="79" cy="175" rx="6" ry="12" fill="url(#fireGrad)">
    <animateTransform attributeName="transform" type="scale" values="1,1;1.2,0.8;1,1" dur="0.5s" repeatCount="indefinite"/>
  </ellipse>
  
  <rect x="317" y="180" width="8" height="40" fill="#8D6E63"/>
  <ellipse cx="321" cy="175" rx="6" ry="12" fill="url(#fireGrad)">
    <animateTransform attributeName="transform" type="scale" values="1,1;1.2,0.8;1,1" dur="0.7s" repeatCount="indefinite"/>
  </ellipse>
  
  <!-- Lightning effects -->
  <path d="M 150 50 L 160 80 L 155 80 L 165 120 L 150 90 L 155 90 Z" fill="#FFEB3B" opacity="0.8">
    <animate attributeName="opacity" values="0.8;0.2;0.8" dur="0.3s" repeatCount="indefinite"/>
  </path>
  <path d="M 250 40 L 260 70 L 255 70 L 265 110 L 250 80 L 255 80 Z" fill="#FFEB3B" opacity="0.8">
    <animate attributeName="opacity" values="0.2;0.8;0.2" dur="0.4s" repeatCount="indefinite"/>
  </path>
  
  <!-- Armor pieces scattered -->
  <rect x="100" y="280" width="15" height="15" fill="#9E9E9E" stroke="#616161" stroke-width="1" transform="rotate(30 107 287)"/>
  <rect x="300" y="290" width="12" height="12" fill="#795548" stroke="#5D4037" stroke-width="1" transform="rotate(-20 306 296)"/>
  
  <!-- Health/damage indicators -->
  <rect x="30" y="30" width="60" height="8" fill="#F44336" stroke="#D32F2F" stroke-width="1"/>
  <rect x="30" y="30" width="35" height="8" fill="#4CAF50"/>
  
  <rect x="310" y="30" width="60" height="8" fill="#F44336" stroke="#D32F2F" stroke-width="1"/>
  <rect x="310" y="30" width="45" height="8" fill="#4CAF50"/>
  
  <!-- Sparks -->
  <circle cx="190" cy="160" r="2" fill="#FFD700">
    <animate attributeName="cy" values="160;140;160" dur="0.8s" repeatCount="indefinite"/>
  </circle>
  <circle cx="210" cy="165" r="1.5" fill="#FF5722">
    <animate attributeName="cy" values="165;145;165" dur="1s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Title -->
  <text x="200" y="380" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#F44336">PVP</text>
</svg>