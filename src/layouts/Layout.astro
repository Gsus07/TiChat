---
// src/layouts/Layout.astro
import { ClientRouter } from "astro:transitions";
import '../styles/global.css';
import Navigation from '../components/react/Navigation.tsx';
import NotificationProvider from '../components/react/NotificationProvider.tsx';
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
		<!-- Preload critical resources -->
		<link rel="preload" href="/minecraft.svg" as="image" type="image/svg+xml">
		<link rel="preload" href="/cod.svg" as="image" type="image/svg+xml">
		<link rel="preload" href="/amongus.svg" as="image" type="image/svg+xml">
		<link rel="preload" href="/uno.svg" as="image" type="image/svg+xml">
		<link rel="preload" href="/pinturillo.svg" as="image" type="image/svg+xml">
		<link rel="preload" href="/fortnite.svg" as="image" type="image/svg+xml">
		<!-- Preload fonts and critical CSS -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<!-- DNS prefetch for better performance -->
		<link rel="dns-prefetch" href="//fonts.googleapis.com">
		<link rel="dns-prefetch" href="//fonts.gstatic.com">
	</head>
	<body class="font-sans bg-gradient-to-br from-gray-900 via-blue-900 to-purple-900 min-h-screen">
		<NotificationProvider client:load>
			<Navigation client:load />

			<!-- Main content with top padding to account for fixed navbar -->
			<div class="pt-16">
				<slot />
			</div>
		</NotificationProvider>

	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
