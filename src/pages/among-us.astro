---
// src/pages/among-us.astro
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
---

<Layout title="Among Us - Muro">
  <main class="min-h-screen bg-gradient-to-br from-purple-900 to-pink-900 py-12 px-4 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-xl opacity-10 animate-pulse animation-delay-4000"></div>
    </div>
    
    <div class="max-w-4xl mx-auto relative z-10">
      <!-- Header del Juego -->
      <div class="bg-white/10 backdrop-blur-md rounded-xl p-6 mb-8 border border-white/20">
        <div class="flex items-center justify-between mb-4">
          <a href="/" class="inline-flex items-center text-purple-300 hover:text-purple-200 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver a juegos
          </a>
        </div>
        
        <div class="flex items-center mb-4">
          <img src="/amongus.svg" alt="Among Us" class="w-16 h-16 rounded-lg mr-4 object-cover">
          <div>
            <h1 class="text-3xl font-bold text-white mb-2">Among Us</h1>
            <p class="text-gray-300">Enga√±o y deducci√≥n en el espacio</p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
          <div class="bg-white/5 rounded-lg p-3">
            <div class="flex items-center text-purple-300 mb-1">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <span class="font-medium">Tripulantes</span>
            </div>
            <span class="text-lg font-medium">8 En sala</span>
          </div>
          <div class="bg-white/5 rounded-lg p-3">
            <div class="flex items-center text-red-300 mb-1">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <span class="font-medium">Impostores</span>
            </div>
            <span class="text-lg font-medium">2 Activos</span>
          </div>
          <div class="bg-white/5 rounded-lg p-3">
            <div class="flex items-center text-green-300 mb-1">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-medium">Estado</span>
            </div>
            <span class="text-lg font-medium">En partida</span>
          </div>
        </div>
      </div>

      <!-- Formulario para nuevo post -->
      <div class="bg-white/10 backdrop-blur-md rounded-xl p-6 mb-8 border border-white/20">
        <form class="space-y-4">
          <div>
            <textarea 
