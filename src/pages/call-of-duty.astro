    </div>
    
    <div class="max-w-4xl mx-auto relative z-10">
      <!-- Header del Juego -->
      <div class="bg-slate-800/90 backdrop-blur-md rounded-xl p-6 mb-8 border border-slate-600/50 shadow-xl">
        <div class="flex items-center justify-between mb-4">
          <a href="/" class="inline-flex items-center text-amber-400 hover:text-amber-300 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver a juegos
          </a>
        </div>
        
        <div class="flex items-center mb-4">
          <img src="/cod.svg" alt="Call of Duty" class="w-16 h-16 rounded-lg mr-4 object-cover">
          <div>
