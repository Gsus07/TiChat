// src/pages/call-of-duty.astro
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
---

<Layout title="Call of Duty - Muro">
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900 py-12 px-4 relative overflow-hidden">
