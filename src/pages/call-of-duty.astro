                <input type="file" class="hidden" accept="image/*">
              </label>
            </div>
            <button 
              type="submit"
              class="px-6 py-2 bg-amber-600 hover:bg-amber-700 text-white rounded-lg transition-colors font-semibold shadow-lg hover:shadow-xl"
            >
              Publicar
            </button>
          </div>
        </form>
      </div>

