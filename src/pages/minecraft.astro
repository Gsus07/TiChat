        if (e.target === modal) {
          modal?.classList.add('hidden');
          (serverForm as HTMLFormElement)?.reset();
        }
      };
      modal?.addEventListener('click', modalClickHandler);
      cleanupFunctions.push(() => modal?.removeEventListener('click', modalClickHandler));
      
      // Event listener para envío del formulario
      const formSubmitHandler = (e: Event) => {
        e.preventDefault();
        
        const submitBtn = serverForm?.querySelector('button[type="submit"]') as HTMLButtonElement;
        const editingServerId = submitBtn?.getAttribute('data-editing');
        
        const serverName = (document.getElementById('serverName') as HTMLInputElement)?.value || '';
        const serverSlug = serverName.toLowerCase().replace(/[^a-z0-9]/g, '-').replace(/-+/g, '-').replace(/^-|-$/g, '');
        
