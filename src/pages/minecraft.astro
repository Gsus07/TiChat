          id: editingServerId || Date.now().toString(),
          name: serverName,
          description: (document.getElementById('serverDescription') as HTMLInputElement)?.value || '',
          ip: (document.getElementById('serverIP') as HTMLInputElement)?.value || '',
          port: (document.getElementById('serverPort') as HTMLInputElement)?.value || '',
