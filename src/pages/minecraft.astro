      }
    });
    document.addEventListener('astro:before-preparation', cleanup);
    
    // Inicialización inicial - solo en página de Minecraft
    if (window.location.pathname === '/minecraft') {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMinecraftPage);
      } else {
        initMinecraftPage();
      }
    }
    
    // Crear página del servidor dinámicamente
