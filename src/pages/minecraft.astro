    function deleteServer(serverName: string) {
      if (confirm(`¿Estás seguro de que quieres eliminar el servidor "${serverName}"?`)) {
        // Eliminar el servidor de los servidores personalizados
        let customServers = JSON.parse(localStorage.getItem('minecraft_customServers') || '[]');
        customServers = customServers.filter((server: any) => server.name !== serverName);
        
        // Guardar en localStorage
        localStorage.setItem('minecraft_customServers', JSON.stringify(customServers));
        
        // Recargar la página para actualizar la vista
        location.reload();
        
        // Mostrar notificación
        showNotification('Servidor eliminado correctamente', 'success');
      }
    }

    // Función para mostrar/ocultar botones de administración
    function toggleAdminButtons() {
      const userSession = localStorage.getItem('userSession') || sessionStorage.getItem('userSession');
      const isLoggedIn = !!userSession;
      const adminButtons = document.querySelectorAll('.admin-buttons');
      
      adminButtons.forEach(button => {
