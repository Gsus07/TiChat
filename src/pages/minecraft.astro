        };
        
        // Guardar en localStorage - específico para Minecraft
        let customServers = JSON.parse(localStorage.getItem('minecraft_customServers') || '[]');
        
        if (editingServerId) {
          // Modo edición
          const serverIndex = customServers.findIndex((s: {id: string}) => s.id === editingServerId);
          if (serverIndex !== -1) {
            customServers[serverIndex] = serverData;
            showNotification('Servidor actualizado correctamente', 'success');
          }
          
          // Resetear el botón
          submitBtn.textContent = 'Crear Servidor';
          submitBtn.removeAttribute('data-editing');
        } else {
          // Modo creación
          customServers.push(serverData);
          showNotification('Servidor agregado correctamente', 'success');
        }
        
        localStorage.setItem('minecraft_customServers', JSON.stringify(customServers));
        
        modal?.classList.add('hidden');
        (serverForm as HTMLFormElement)?.reset();
        
        // Recargar servidores sin recargar la página
        loadCustomServers();
      };
      serverForm?.addEventListener('submit', formSubmitHandler);
      cleanupFunctions.push(() => serverForm?.removeEventListener('submit', formSubmitHandler));
