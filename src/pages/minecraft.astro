---
// src/pages/minecraft.astro
import Layout from '../layouts/Layout.astro';
import ServerCard from '../components/ServerCard.astro';
---

<Layout title="Minecraft - Servidores">
  <main class="min-h-screen bg-gradient-to-br from-slate-900 via-green-900 to-emerald-900 py-12 px-4 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-green-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-emerald-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-lime-500 rounded-full mix-blend-multiply filter blur-xl opacity-10 animate-pulse animation-delay-4000"></div>
    </div>
    
    <div class="max-w-6xl mx-auto relative z-10">
      <!-- Header Section -->
      <div class="text-center mb-16">
        <!-- Back button -->
        <div class="flex justify-start mb-8">
          <a href="/" class="group inline-flex items-center bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 text-green-300 hover:text-green-200 hover:bg-white/20 transition-all duration-300 border border-white/20">
            <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver a juegos
          </a>
        </div>
        
        <!-- Game header -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/20 to-emerald-500/20 rounded-3xl blur-3xl"></div>
          <div class="relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
            <div class="flex items-center justify-center mb-6">
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-400 rounded-2xl blur opacity-75"></div>
                <img src="/minecraft.svg" alt="Minecraft" class="relative w-24 h-24 rounded-2xl object-cover border-2 border-white/20">
              </div>
              <div class="ml-6 text-left">
                <h1 class="text-5xl md:text-6xl font-bold mb-2">
                  <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 via-emerald-300 to-lime-300">
                    Minecraft
                  </span>
                </h1>
                <div class="flex items-center text-green-400">
                  <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse mr-2"></div>
                  <span class="text-lg font-medium">6 Servidores Activos</span>
                </div>
              </div>
            </div>
            <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">
              Explora nuestros <span class="text-green-400 font-semibold">servidores de Minecraft</span> y vive aventuras épicas de 
              <span class="text-emerald-400 font-semibold">construcción y supervivencia</span> junto a tus amigos
            </p>
          </div>
        </div>
      </div>

      <!-- Servidores Grid Section -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-3xl blur-3xl"></div>
        <div class="relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-400">
              Servidores Disponibles
            </h2>
            <div class="flex items-center space-x-4">
              <button id="addServerBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Añadir Servidor
              </button>
              <div class="flex items-center text-green-400">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm font-medium">Todos en línea</span>
              </div>
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Servidor Survival -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Survival"
            description="Modo supervivencia clásico con amigos"
            image="/minecraft-survival.jpg"
            ip="survival.miserver.com"
            port="25565"
            version="1.20.1"
            link="/minecraft/survival"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('survival')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('survival')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        <!-- Servidor Creativo -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Creativo"
            description="Construcciones épicas sin límites"
            image="/minecraft-creative.jpg"
            ip="creative.miserver.com"
            port="25566"
            version="1.20.1"
            link="/minecraft/creative"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('creative')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('creative')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        <!-- Servidor Modded -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Modded"
            description="Aventuras con mods increíbles"
            image="/minecraft-modded.jpg"
            ip="modded.miserver.com"
            port="25567"
            version="1.19.2 + Forge"
            link="/minecraft/modded"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('modded')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('modded')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        <!-- Servidor PvP -->
        <div class="relative group">
          <ServerCard 
            name="Servidor PvP"
            description="Batallas épicas entre jugadores"
            image="/minecraft-pvp.jpg"
            ip="pvp.miserver.com"
            port="25568"
            version="1.20.1"
            link="/minecraft/pvp"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('pvp')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('pvp')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Servidor Skyblock -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Skyblock"
            description="Supervivencia en las alturas"
            image="/minecraft-skyblock.jpg"
            ip="skyblock.miserver.com"
            port="25569"
            version="1.20.1"
            link="/minecraft/skyblock"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('skyblock')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('skyblock')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Servidor Minijuegos -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Minijuegos"
            description="Diversión con minijuegos variados"
            image="/minecraft-minigames.jpg"
            ip="minigames.miserver.com"
            port="25570"
            version="1.20.1"
            link="/minecraft/minigames"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('minijuegos')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('minijuegos')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal para añadir servidor -->
    <div id="addServerModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden z-50">
      <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-slate-800 rounded-xl p-6 w-full max-w-md border border-white/10">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-white">Añadir Nuevo Servidor</h3>
            <button id="closeModal" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          
          <form id="serverForm" class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Nombre del Servidor</label>
              <input type="text" id="serverName" required class="w-full bg-white/5 border border-white/20 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ej: Mi Servidor Personalizado">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Descripción</label>
              <input type="text" id="serverDescription" required class="w-full bg-white/5 border border-white/20 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ej: Servidor de aventuras épicas">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Dirección IP</label>
              <input type="text" id="serverIP" required class="w-full bg-white/5 border border-white/20 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ej: miservidor.com">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Puerto</label>
              <input type="text" id="serverPort" required class="w-full bg-white/5 border border-white/20 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ej: 25565" value="25565">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Versión</label>
              <input type="text" id="serverVersion" required class="w-full bg-white/5 border border-white/20 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ej: 1.20.1" value="1.20.1">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Imagen (URL)</label>
              <div class="flex gap-2">
                <input 
                  type="text" 
                  id="serverImage" 
                  placeholder="Ej: /mi-servidor.jpg" 
                  class="flex-1 bg-white/5 border border-white/20 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500"
                  value="/minecraft-custom.jpg"
                />
                <button 
                  type="button" 
                  onclick="openImageGallery()" 
                  class="px-4 py-3 bg-purple-500/20 border border-purple-500/30 rounded-lg text-purple-400 hover:text-purple-300 hover:bg-purple-500/30 transition-colors"
                  title="Seleccionar de galería"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 002 2z"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <div class="flex space-x-3 pt-4">
              <button type="button" id="cancelBtn" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white py-2 px-4 rounded-lg transition-colors">
                Cancelar
              </button>
              <button type="submit" class="flex-1 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg transition-colors">
                Crear Servidor
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Cargar servidores desde localStorage - específicos para Minecraft
    function loadCustomServers() {
      const customServers = JSON.parse(localStorage.getItem('minecraft_customServers') || '[]');
      const serverGrid = document.querySelector('.grid');
      
      // Limpiar servidores personalizados existentes
      const existingCustomServers = serverGrid?.querySelectorAll('[data-custom-server]');
      existingCustomServers?.forEach(server => server.remove());
      
      customServers.forEach((server: {
        name: string;
        description: string;
        ip: string;
        port: string;
        version: string;
        image: string;
        id: string;
        link: string;
      }) => {
        const serverCard = createServerCard(server);
        serverGrid?.appendChild(serverCard);
      });
      
      // Actualizar visibilidad de botones de administración
      toggleAdminButtons();
    }
    
    // Funciones para manejar servidores predeterminados
    function editDefaultServer(serverType: string) {
      const serverData = {
        survival: {
          name: 'Servidor Survival',
          description: 'Modo supervivencia clásico con amigos',
          image: '/minecraft-survival.jpg',
          ip: 'survival.miserver.com',
          port: '25565',
          version: '1.20.1'
        },
        creative: {
          name: 'Servidor Creativo',
          description: 'Construcciones épicas sin límites',
          image: '/minecraft-creative.jpg',
          ip: 'creative.miserver.com',
          port: '25566',
          version: '1.20.1'
        },
        modded: {
          name: 'Servidor Modded',
          description: 'Aventuras con mods increíbles',
          image: '/minecraft-modded.jpg',
          ip: 'modded.miserver.com',
          port: '25567',
          version: '1.19.2 + Forge'
        },
        pvp: {
          name: 'Servidor PvP',
          description: 'Batallas épicas entre jugadores',
          image: '/minecraft-pvp.jpg',
          ip: 'pvp.miserver.com',
          port: '25568',
          version: '1.20.1'
        },
        skyblock: {
          name: 'Servidor Skyblock',
          description: 'Supervivencia en las alturas',
          image: '/minecraft-skyblock.jpg',
          ip: 'skyblock.miserver.com',
          port: '25569',
          version: '1.20.1'
        },
        minijuegos: {
          name: 'Servidor Minijuegos',
          description: 'Diversión con minijuegos variados',
          image: '/minecraft-minigames.jpg',
          ip: 'minigames.miserver.com',
          port: '25570',
          version: '1.20.1'
        }
      };
      
      const server = serverData[serverType as keyof typeof serverData];
      if (server) {
        // Rellenar el formulario con los datos del servidor
        const nameInput = document.getElementById('serverName') as HTMLInputElement;
        const descInput = document.getElementById('serverDescription') as HTMLInputElement;
        const ipInput = document.getElementById('serverIP') as HTMLInputElement;
        const portInput = document.getElementById('serverPort') as HTMLInputElement;
        const versionInput = document.getElementById('serverVersion') as HTMLInputElement;
        const imageInput = document.getElementById('serverImage') as HTMLInputElement;
        
        if (nameInput) nameInput.value = server.name;
        if (descInput) descInput.value = server.description;
        if (ipInput) ipInput.value = server.ip;
        if (portInput) portInput.value = server.port;
        if (versionInput) versionInput.value = server.version;
        if (imageInput) imageInput.value = server.image;
        
        // Mostrar el modal
        const modal = document.getElementById('addServerModal');
        modal?.classList.remove('hidden');
      }
    }
    
    function deleteDefaultServer(serverType: string) {
      if (confirm(`¿Estás seguro de que quieres eliminar el ${serverType} servidor? Esta acción no se puede deshacer.`)) {
        // Ocultar el servidor
        const serverElement = document.querySelector(`[onclick="deleteDefaultServer('${serverType}')"]`)?.closest('.relative');
        if (serverElement) {
          (serverElement as HTMLElement).style.display = 'none';
          
          // Guardar en localStorage que este servidor fue eliminado
          const hiddenServers = JSON.parse(localStorage.getItem('hiddenDefaultServers') || '[]');
          if (!hiddenServers.includes(serverType)) {
            hiddenServers.push(serverType);
            localStorage.setItem('hiddenDefaultServers', JSON.stringify(hiddenServers));
          }
        }
      }
