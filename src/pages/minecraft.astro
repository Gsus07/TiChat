---
// src/pages/minecraft.astro
import Layout from '../layouts/Layout.astro';
import ServerCard from '../components/ServerCard.astro';
import AddServerModal from '../components/react/AddServerModal.tsx';
---

<Layout title="Minecraft - Servidores">
  <main class="min-h-screen bg-gradient-to-br from-slate-900 via-green-900 to-emerald-900 py-12 px-4 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-green-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-emerald-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-lime-500 rounded-full mix-blend-multiply filter blur-xl opacity-10 animate-pulse animation-delay-4000"></div>
    </div>
    
    <div class="max-w-6xl mx-auto relative z-10">
      <!-- Header Section -->
      <div class="text-center mb-16">
        <!-- Back button -->
        <div class="flex justify-start mb-8">
          <a href="/" class="group inline-flex items-center bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 text-green-300 hover:text-green-200 hover:bg-white/20 transition-all duration-300 border border-white/20">
            <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver a juegos
          </a>
        </div>
        
        <!-- Game header -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/20 to-emerald-500/20 rounded-3xl blur-3xl"></div>
          <div class="relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
            <div class="flex items-center justify-center mb-6">
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-400 rounded-2xl blur opacity-75"></div>
                <img src="/minecraft.svg" alt="Minecraft" class="relative w-24 h-24 rounded-2xl object-cover border-2 border-white/20">
              </div>
              <div class="ml-6 text-left">
                <h1 class="text-5xl md:text-6xl font-bold mb-2">
                  <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 via-emerald-300 to-lime-300">
                    Minecraft
                  </span>
                </h1>
                <div class="flex items-center text-green-400">
                  <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse mr-2"></div>
                  <span class="text-lg font-medium">6 Servidores Activos</span>
                </div>
              </div>
            </div>
            <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">
              Explora nuestros <span class="text-green-400 font-semibold">servidores de Minecraft</span> y vive aventuras épicas de 
              <span class="text-emerald-400 font-semibold">construcción y supervivencia</span> junto a tus amigos
            </p>
          </div>
        </div>
      </div>

      <!-- Servidores Grid Section -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-3xl blur-3xl"></div>
        <div class="relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-400">
              Servidores Disponibles
            </h2>
            <div class="flex items-center space-x-4">
              <button id="addServerBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Añadir Servidor
              </button>
              <div class="flex items-center text-green-400">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm font-medium">Todos en línea</span>
              </div>
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Servidor Survival -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Survival"
            description="Modo supervivencia clásico con amigos"
            image="/minecraft-survival.jpg"
            ip="survival.miserver.com"
            port="25565"
            version="1.20.1"
            link="/minecraft/survival"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('survival')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('survival')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        <!-- Servidor Creativo -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Creativo"
            description="Construcciones épicas sin límites"
            image="/minecraft-creative.jpg"
            ip="creative.miserver.com"
            port="25566"
            version="1.20.1"
            link="/minecraft/creative"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('creative')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('creative')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        <!-- Servidor Modded -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Modded"
            description="Aventuras con mods increíbles"
            image="/minecraft-modded.jpg"
            ip="modded.miserver.com"
            port="25567"
            version="1.19.2 + Forge"
            link="/minecraft/modded"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('modded')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('modded')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        <!-- Servidor PvP -->
        <div class="relative group">
          <ServerCard 
            name="Servidor PvP"
            description="Batallas épicas entre jugadores"
            image="/minecraft-pvp.jpg"
            ip="pvp.miserver.com"
            port="25568"
            version="1.20.1"
            link="/minecraft/pvp"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('pvp')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('pvp')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Servidor Skyblock -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Skyblock"
            description="Supervivencia en las alturas"
            image="/minecraft-skyblock.jpg"
            ip="skyblock.miserver.com"
            port="25569"
            version="1.20.1"
            link="/minecraft/skyblock"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('skyblock')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('skyblock')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Servidor Minijuegos -->
        <div class="relative group">
          <ServerCard 
            name="Servidor Minijuegos"
            description="Diversión con minijuegos variados"
            image="/minecraft-minigames.jpg"
            ip="minigames.miserver.com"
            port="25570"
            version="1.20.1"
            link="/minecraft/minigames"
          />
          <!-- Edit/Delete buttons for default servers -->
          <div class="absolute top-4 right-4 z-20 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 admin-buttons">
            <button onclick="editDefaultServer('minijuegos')" class="bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30 text-blue-400 hover:text-blue-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </button>
            <button onclick="deleteDefaultServer('minijuegos')" class="bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30 text-red-400 hover:text-red-300 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
          </div>
        </div>
      </div>
    </div>

    <!-- React Add Server Modal -->
    <AddServerModal client:load isOpen={false} onClose={() => {}} />
  </main>

  <script>
    // Cargar servidores desde localStorage - específicos para Minecraft
    function loadCustomServers() {
      const customServers = JSON.parse(localStorage.getItem('minecraft_customServers') || '[]');
      const serverGrid = document.querySelector('.grid');
      
      // Limpiar servidores personalizados existentes
      const existingCustomServers = serverGrid?.querySelectorAll('[data-custom-server]');
      existingCustomServers?.forEach(server => server.remove());
      
      customServers.forEach((server: {
        name: string;
        description: string;
        ip: string;
        port: string;
        version: string;
        image: string;
        id: string;
        link: string;
      }) => {
        const serverCard = createServerCard(server);
        serverGrid?.appendChild(serverCard);
      });
      
      // Actualizar visibilidad de botones de administración
      toggleAdminButtons();
    }
    
    // Removed unused functions: editDefaultServer and deleteDefaultServer
    
    // Función para restaurar servidores ocultos (opcional)
    function restoreHiddenServers() {
      const hiddenServers = JSON.parse(localStorage.getItem('hiddenDefaultServers') || '[]');
      hiddenServers.forEach((serverType: string) => {
        const serverElement = document.querySelector(`[onclick="deleteDefaultServer('${serverType}')"]`)?.closest('.relative');
        if (serverElement) {
          (serverElement as HTMLElement).style.display = 'none';
        }
      });
    }
    
    // Crear elemento de tarjeta de servidor
    function createServerCard(server: {
      name: string;
      description: string;
      image: string;
      ip: string;
      port: string;
      id: string;
      link: string;
      version?: string;
    }) {
      const serverCard = document.createElement('a');
      serverCard.href = server.link;
      serverCard.className = 'block group relative';
      serverCard.setAttribute('data-custom-server', 'true');
      serverCard.innerHTML = `
        <!-- Glow effect background -->
        <div class="absolute -inset-1 bg-gradient-to-r from-green-600 to-emerald-600 rounded-2xl blur opacity-0 group-hover:opacity-75 transition duration-500"></div>
        
        <!-- Main card -->
        <div class="relative bg-gradient-to-br from-slate-800/95 to-slate-900/95 backdrop-blur-xl rounded-2xl overflow-hidden shadow-2xl transition-all duration-500 hover:scale-[1.02] hover:shadow-green-500/25 border border-white/10 group-hover:border-green-500/50">
          <!-- Status indicator -->
          <div class="absolute top-4 left-4 z-10 flex items-center bg-green-500/20 backdrop-blur-sm rounded-full px-3 py-1 border border-green-500/30">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse mr-2"></div>
            <span class="text-green-300 text-xs font-medium">En línea</span>
          </div>
          
          <!-- Edit button for custom servers -->
          <button onclick="event.preventDefault(); editServer('${server.name}')" class="admin-buttons absolute top-4 left-4 z-10 text-blue-400 hover:text-blue-300 transition-colors opacity-0 group-hover:opacity-100 bg-blue-500/20 backdrop-blur-sm rounded-full p-2 border border-blue-500/30">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          </button>
          
          <!-- Delete button for custom servers -->
          <button onclick="event.preventDefault(); deleteServer('${server.name}')" class="admin-buttons absolute top-4 right-4 z-10 text-red-400 hover:text-red-300 transition-colors opacity-0 group-hover:opacity-100 bg-red-500/20 backdrop-blur-sm rounded-full p-2 border border-red-500/30">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
          
          <!-- Image container with overlay effects -->
          <div class="relative h-48 overflow-hidden">
            <img 
              src="${server.image}" 
              alt="${server.name}"
              class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110"
            />
            <!-- Gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-transparent to-transparent opacity-70 group-hover:opacity-50 transition-opacity duration-500"></div>
            
            <!-- Server type badge -->
            <div class="absolute bottom-4 right-4 bg-white/10 backdrop-blur-sm rounded-lg px-3 py-1 border border-white/20">
              <span class="text-white text-sm font-medium">${server.version || '1.20.1'}</span>
            </div>
            
            <!-- Shimmer effect -->
            <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12"></div>
          </div>
          
          <!-- Content section -->
          <div class="p-6 relative">
            <!-- Server name -->
            <h3 class="text-2xl font-bold mb-3 text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300 group-hover:from-green-300 group-hover:to-emerald-300 transition-all duration-500">
              ${server.name}
            </h3>
            
            <!-- Description -->
            <p class="text-gray-400 group-hover:text-gray-300 transition-colors duration-300 leading-relaxed mb-4">
              ${server.description}
            </p>
            
            <!-- Server details -->
            <div class="space-y-3 mb-4">
              <!-- IP Address -->
              <div class="flex items-center bg-white/5 rounded-lg p-3 border border-white/10 group-hover:border-green-500/30 transition-colors duration-300">
                <div class="w-8 h-8 bg-green-500/20 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Dirección IP</div>
                  <div class="text-green-300 font-mono text-sm">${server.ip}:${server.port}</div>
                </div>
              </div>
              
              <!-- Players count -->
              <div class="flex items-center bg-white/5 rounded-lg p-3 border border-white/10">
                <div class="w-8 h-8 bg-blue-500/20 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-2.239"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Jugadores</div>
                  <div class="text-blue-300 text-sm font-medium">${Math.floor(Math.random() * 20) + 5}/50</div>
                </div>
              </div>
            </div>
            
            <!-- Action button -->
            <div class="flex items-center justify-between mt-6">
              <div class="flex items-center text-green-400 group-hover:text-green-300 transition-colors duration-300">
                <span class="text-sm font-medium">Unirse al servidor</span>
                <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
              
              <!-- Ping indicator -->
              <div class="flex items-center text-xs text-gray-500">
                <div class="w-2 h-2 bg-green-400 rounded-full mr-1 animate-pulse"></div>
                <span>${Math.floor(Math.random() * 50) + 10}ms</span>
              </div>
            </div>
            
            <!-- Decorative bottom border -->
            <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-green-500 to-emerald-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          </div>
        </div>
      `;
      return serverCard;
    }
    
