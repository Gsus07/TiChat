    // Función de inicialización
    function initMinecraftPage() {
      // Limpiar event listeners anteriores
      cleanupFunctions.forEach(cleanup => cleanup());
      cleanupFunctions = [];
      
      loadCustomServers();
      restoreHiddenServers();
      toggleAdminButtons();
      
      const addServerBtn = document.getElementById('addServerBtn');
      // Modal elements are now handled by React component
      
      // Event listener para abrir modal React
      const openModalHandler = () => {
        // Wait for React component to be available
        const checkReactComponent = () => {
          const reactModal = document.querySelector('[data-react-modal="add-server"]');
          if (reactModal) {
            // Dispatch custom event to open React modal
            window.dispatchEvent(new CustomEvent('openAddServerModal'));
          } else {
            setTimeout(checkReactComponent, 100);
          }
        };
        checkReactComponent();
      };
      addServerBtn?.addEventListener('click', openModalHandler);
      cleanupFunctions.push(() => addServerBtn?.removeEventListener('click', openModalHandler));
      
      // Escuchar cambios en el estado de autenticación
      const storageHandler = (e: StorageEvent) => {
        if (e.key === 'userSession') {
          toggleAdminButtons();
        }
      };
      
      // También escuchar cambios en la página actual
      const checkAuthHandler = () => {
        toggleAdminButtons();
      };
      window.addEventListener('focus', checkAuthHandler);
      cleanupFunctions.push(() => window.removeEventListener('focus', checkAuthHandler));
      
      // Verificar autenticación cada vez que se carga la página
      setTimeout(toggleAdminButtons, 100);
      window.addEventListener('storage', storageHandler);
      cleanupFunctions.push(() => window.removeEventListener('storage', storageHandler));
      
      // Listen for React component events
      const serverAddedHandler = () => {
        // Reload the page to show the new server
        location.reload();
      };
      
      window.addEventListener('serverAdded', serverAddedHandler as EventListener);
      cleanupFunctions.push(() => window.removeEventListener('serverAdded', serverAddedHandler as EventListener));
      
      const serverUpdatedHandler = () => {
        // Reload the page to show the updated server
        location.reload();
      };
      
      window.addEventListener('serverUpdated', serverUpdatedHandler as EventListener);
      cleanupFunctions.push(() => window.removeEventListener('serverUpdated', serverUpdatedHandler as EventListener));
      
      // Form submission is now handled by the React component
    }
    
    // Cleanup antes de transiciones
    function cleanup() {
      cleanupFunctions.forEach(cleanup => cleanup());
      cleanupFunctions = [];
    }
    
