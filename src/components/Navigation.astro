---
// src/components/Navigation.astro
import { getAllGames } from '../utils/games';
import NavigationReact from './react/Navigation';

// Obtener todos los juegos activos desde la base de datos
const { data: games, error } = await getAllGames();
const gamesList = games || [];
---

<!-- Navigation Bar -->
<nav
  id="navbar"
  class="fixed top-0 left-0 right-0 z-50 bg-secondary border-b border-secondary shadow-theme-xl transition-all duration-500 ease-out backdrop-blur-md text-primary"
>
  <div class="w-full px-6 md:px-8 lg:px-10">
    <div class="flex items-center justify-between h-16">
      <!-- Logo + Title (Clickable Home Link) -->
      <div class="flex items-center">
        <a
          href="/"
          class="group relative flex items-center space-x-3 py-2 pr-3 rounded-xl hover:text-accent transition-all duration-300 hover:scale-105 hover:bg-secondary hover:shadow-theme-md cursor-pointer"
        >
          <!-- Logo with enhanced hover effects -->
          <div class="relative w-12 h-12 rounded-xl overflow-hidden shadow-lg group-hover:shadow-xl group-hover:shadow-calico-orange-500/30 transition-all duration-300">
            <img
              src="/tina-logo.png"
              alt="TinaGaming Logo"
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300"
            />
            <!-- Subtle glow effect on hover -->
            <div class="absolute inset-0 bg-gradient-to-br from-calico-orange-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          </div>
          
          <!-- Title with enhanced interactivity -->
          <div class="flex flex-col">
            <span class="font-bold text-xl text-primary group-hover:text-accent transition-colors duration-300 relative">
              TinaGaming
              <!-- Subtle underline effect on hover -->
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-calico-orange-400 group-hover:w-full transition-all duration-300"></span>
            </span>
            <span class="text-xs text-secondary group-hover:text-primary font-medium tracking-wide transition-colors duration-300">Tu comunidad gamer</span>
          </div>
          
          <!-- Background glow effect -->
          <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-calico-orange-500 to-calico-orange-600 opacity-0 group-hover:opacity-5 transition-opacity duration-300 pointer-events-none"></div>
        </a>
      </div>

      <!-- Dynamic React Component -->
      <NavigationReact games={gamesList} client:load />
    </div>
  </div>
</nav>

<style>
#navbar {
  z-index: 9999;
  transition: all 0.3s ease;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}
</style>
