---
// src/components/PostCard.astro
const { author, time, content, image, likes, comments } = Astro.props;
---

<div class="bg-white/10 backdrop-blur-md rounded-xl p-6 shadow-lg">
  <!-- Header del post -->
  <div class="flex items-center mb-4">
    <div class="w-10 h-10 bg-gradient-to-br from-green-400 to-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
      {author.charAt(0).toUpperCase()}
    </div>
    <div class="ml-3">
      <h3 class="font-semibold text-white">{author}</h3>
      <p class="text-sm text-gray-400">{time}</p>
    </div>
  </div>
  
  <!-- Contenido del post -->
  <div class="mb-4">
    <p class="text-gray-200 leading-relaxed">{content}</p>
  </div>
  
  <!-- Imagen del post (si existe) -->
  {image && (
    <div class="mb-4 rounded-lg overflow-hidden">
      <img 
        src={image} 
        alt="Post image" 
        class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
      >
    </div>
  )}
  
  <!-- Estadísticas y acciones -->
  <div class="flex items-center justify-between pt-4 border-t border-white/10">
    <div class="flex items-center space-x-6">
      <!-- Likes -->
      <button class="flex items-center space-x-2 text-gray-400 hover:text-red-400 transition-colors group">
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span class="text-sm font-medium">{likes}</span>
      </button>
      
      <!-- Comentarios -->
      <button class="flex items-center space-x-2 text-gray-400 hover:text-blue-400 transition-colors group">
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span class="text-sm font-medium">{comments}</span>
      </button>
      
      <!-- Compartir -->
      <button class="flex items-center space-x-2 text-gray-400 hover:text-green-400 transition-colors group">
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
        </svg>
        <span class="text-sm font-medium">Compartir</span>
      </button>
    </div>
  </div>
  
  <!-- Sección de comentarios rápidos -->
  <div class="mt-4 pt-4 border-t border-white/10">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-gradient-to-br from-purple-400 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-xs">
        T
      </div>
      <input 
        type="text" 
        placeholder="Escribe un comentario..." 
        class="flex-1 px-3 py-2 bg-white/5 border border-white/10 rounded-full text-white placeholder-gray-500 text-sm focus:outline-none focus:border-white/30 transition-colors"
      >
      <button class="text-green-400 hover:text-green-300 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
        </svg>
      </button>
    </div>
  </div>
</div>